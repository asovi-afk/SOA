                    "rating": "PG-13",
                    "listed_in": [
                        "Drama",
                        "Psychological"
                    ],
                    "description": "Bosnian Franciscan monk is put into an infamous prison in Istanbul. There he witnesses the sad destiny of a young Ottoman scholar."
                }
            },
            "MovieUpdate": {
                "type": "object",
                "required": [
                    "_id",
                    "duration",
                    "title",
                    "release_year",
                    "director",
                    "cast",
                    "country",
                    "rating",
                    "listed_in",
                    "description"
                ],
                "properties": {
                    "_id": {
                        "type": "string",
                        "minLength": 24,
                        "maxLength": 24
                    },
                    "duration": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "title": {
                        "type": "string"
                    },
                    "release_year": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "director": {
                        "$ref": "#/components/schemas/StringArray"
                    },
                    "cast": {
                        "$ref": "#/components/schemas/StringArray"
                    },
                    "country": {
                        "$ref": "#/components/schemas/StringArray"
                    },
                    "rating": {
                        "type": "string"
                    },
                    "listed_in": {
                        "$ref": "#/components/schemas/StringArray"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "example": {
                    "_id": "63b18d4b9e5b5f62217a85cd",
                    "duration": 72,
                    "title": "Prokleta avlija",
                    "release_year": 1984,
                    "director": [
                        "Ivo Andric",
                        "Milenko Maricic"
                    ],
                    "cast": [
                        "Petar Kralj",
                        "Dubravko Jovanovic"
                    ],
                    "country": [
                        "Serbia",
                        "Bosnia and Herzegovina"
                    ],
                    "rating": "PG-13",
                    "listed_in": [
                        "Dramas"
                    ],
                    "description": "Novi opis bez progutanih slova."
                }
            },
            "FilterObject": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "minLength": 1
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1
                    },
                    "director": {
                        "$ref": "#/components/schemas/NotEmptyStringArray"
                    },
                    "cast": {
                        "$ref": "#/components/schemas/NotEmptyStringArray"
                    },
                    "listed_in": {
                        "$ref": "#/components/schemas/NotEmptyStringArray"
                    }
                },
                "example": {
                    "title": "man",
                    "listed_in": [
                        "Dramas",
                        "Comedies"
                    ]
                }
            }
        }
    }
}